{
  "type": "list",
  "title": "List",
  "esphome": {
    "root_key": "list",
    "props": {
      "align": "align",
      "hidden": "hidden",
      "clickable": "clickable",
      "opacity": "opacity",
      "group": "group",
      "item_height": "item_height",
      "items": "items"
    },
    "style": {
      "bg_color": "bg_color",
      "bg_opa": "bg_opa",
      "text_color": "text_color",
      "border_width": "border_width",
      "border_color": "border_color",
      "radius": "radius"
    },
    "events": {
      "on_item_clicked": "on_item_clicked"
    }
  },
  "props": {
    "align": {
      "type": "enum",
      "title": "Align",
      "values": [
        "top_left",
        "top_mid",
        "top_right",
        "left_mid",
        "center",
        "right_mid",
        "bottom_left",
        "bottom_mid",
        "bottom_right"
      ],
      "default": "top_left"
    },
    "hidden": {
      "type": "boolean",
      "default": false
    },
    "clickable": {
      "type": "boolean",
      "default": true
    },
    "opacity": {
      "type": "number",
      "min": 0,
      "max": 255,
      "default": 255
    },
    "group": {
      "type": "string",
      "default": ""
    },
    "item_height": {
      "type": "number",
      "min": 16,
      "max": 200,
      "default": 44
    },
    "items": {
      "type": "string_list",
      "title": "Items (one per line)",
      "default": [
        "Item 1",
        "Item 2"
      ]
    }
  },
  "style": {
    "bg_color": {
      "type": "color",
      "title": "Background color",
      "default": "#111827"
    },
    "bg_opa": {
      "type": "number",
      "min": 0,
      "max": 255,
      "default": 255
    },
    "text_color": {
      "type": "color",
      "default": "#e5e7eb"
    },
    "border_width": {
      "type": "number",
      "min": 0,
      "max": 20,
      "default": 0
    },
    "border_color": {
      "type": "color",
      "default": "#374151"
    },
    "radius": {
      "type": "number",
      "min": 0,
      "max": 48,
      "default": 0
    }
  },
  "items": {
    "bg_color": {
      "type": "color",
      "title": "Items background",
      "default": ""
    },
    "text_color": {
      "type": "color",
      "title": "Items text color",
      "default": ""
    }
  },
  "selected": {
    "bg_color": {
      "type": "color",
      "title": "Selected background",
      "default": ""
    },
    "text_color": {
      "type": "color",
      "title": "Selected text color",
      "default": ""
    }
  },
  "events": {
    "on_item_clicked": {
      "type": "yaml_block",
      "default": ""
    }
  },
  "groups": {
    "Common": {
      "section": "props",
      "keys": [
        "align",
        "hidden",
        "clickable",
        "opacity",
        "group"
      ]
    },
    "Props": {
      "section": "props",
      "keys": [
        "item_height",
        "items"
      ]
    },
    "Style": {
      "section": "style",
      "keys": [
        "border_width",
        "bg_color",
        "bg_opa",
        "radius",
        "border_color",
        "text_color"
      ]
    },
    "Items style": {
      "section": "items",
      "keys": ["bg_color", "text_color"],
      "defaultCollapsed": true
    },
    "Selected style": {
      "section": "selected",
      "keys": ["bg_color", "text_color"],
      "defaultCollapsed": true
    },
    "Events": {
      "section": "events",
      "keys": [
        "on_item_clicked"
      ]
    }
  }
}