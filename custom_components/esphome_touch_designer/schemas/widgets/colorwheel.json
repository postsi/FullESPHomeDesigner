{
  "type": "colorwheel",
  "title": "Color Wheel",
  "esphome": {
    "widget": "colorwheel"
  },
  "props": {
    "align": {
      "type": "enum",
      "title": "Align",
      "values": [
        "top_left",
        "top_mid",
        "top_right",
        "left_mid",
        "center",
        "right_mid",
        "bottom_left",
        "bottom_mid",
        "bottom_right"
      ],
      "default": "top_left"
    },
    "hidden": {
      "type": "boolean",
      "default": false
    },
    "clickable": {
      "type": "boolean",
      "default": true
    },
    "opacity": {
      "type": "number",
      "min": 0,
      "max": 255,
      "default": 255
    },
    "group": {
      "type": "string",
      "default": ""
    },
    "mode": {
      "type": "enum",
      "values": [
        "hsv",
        "rgb"
      ],
      "default": "hsv"
    }
  },
  "style": {
    "bg_color": {
      "type": "color",
      "title": "Background color",
      "default": "#111827"
    },
    "bg_opa": {
      "type": "number",
      "min": 0,
      "max": 255,
      "default": 255
    },
    "text_color": {
      "type": "color",
      "default": "#e5e7eb"
    },
    "border_width": {
      "type": "number",
      "min": 0,
      "max": 20,
      "default": 0
    },
    "border_color": {
      "type": "color",
      "default": "#374151"
    },
    "radius": {
      "type": "number",
      "min": 0,
      "max": 48,
      "default": 0
    }
  },
  "events": {
    "on_color_changed": {
      "type": "yaml_block",
      "default": ""
    }
  },
  "groups": {
    "Common": {
      "section": "props",
      "keys": [
        "align",
        "hidden",
        "clickable",
        "opacity",
        "group"
      ]
    },
    "Props": {
      "section": "props",
      "keys": [
        "mode"
      ]
    },
    "Style": {
      "section": "style",
      "keys": [
        "border_width",
        "bg_color",
        "bg_opa",
        "radius",
        "border_color",
        "text_color"
      ]
    },
    "Events": {
      "section": "events",
      "keys": [
        "on_color_changed"
      ]
    }
  }
}