{
  "type": "image_button",
  "title": "Image Button",
  "esphome": {
    "widget": "image_button",
    "style": {
      "pad_top": "pad_top",
      "pad_bottom": "pad_bottom",
      "pad_left": "pad_left",
      "pad_right": "pad_right",
      "radius": "radius",
      "shadow_width": "shadow_width",
      "shadow_color": "shadow_color"
    }
  },
  "props": {
    "align": {
      "type": "enum",
      "title": "Align",
      "values": [
        "top_left",
        "top_mid",
        "top_right",
        "left_mid",
        "center",
        "right_mid",
        "bottom_left",
        "bottom_mid",
        "bottom_right"
      ],
      "default": "top_left"
    },
    "hidden": {
      "type": "boolean",
      "default": false
    },
    "clickable": {
      "type": "boolean",
      "default": true
    },
    "opacity": {
      "type": "number",
      "min": 0,
      "max": 255,
      "default": 255
    },
    "group": {
      "type": "string",
      "default": ""
    },
    "src": {
      "type": "string",
      "title": "Image src (LVGL symbol / file)",
      "default": "LV_SYMBOL_OK"
    },
    "toggled_src": {
      "type": "string",
      "title": "Toggled image src",
      "default": ""
    }
  },
  "style": {
    "bg_color": {
      "type": "color",
      "title": "Background color",
      "default": "#111827"
    },
    "bg_opa": {
      "type": "number",
      "min": 0,
      "max": 255,
      "default": 255
    },
    "text_color": {
      "type": "color",
      "default": "#e5e7eb"
    },
    "border_width": {
      "type": "number",
      "min": 0,
      "max": 20,
      "default": 0
    },
    "border_color": {
      "type": "color",
      "default": "#374151"
    },
    "radius": {
      "type": "number",
      "default": 0
    },
    "pad_top": {
      "type": "number",
      "default": 0
    },
    "pad_bottom": {
      "type": "number",
      "default": 0
    },
    "pad_left": {
      "type": "number",
      "default": 0
    },
    "pad_right": {
      "type": "number",
      "default": 0
    },
    "shadow_width": {
      "type": "number",
      "default": 0
    },
    "shadow_color": {
      "type": "color",
      "default": "#000000"
    }
  },
  "events": {
    "on_click": {
      "type": "yaml_block",
      "default": ""
    }
  },
  "groups": {
    "Common": {
      "section": "props",
      "keys": [
        "align",
        "hidden",
        "clickable",
        "opacity",
        "group"
      ]
    },
    "Props": {
      "section": "props",
      "keys": [
        "src",
        "toggled_src"
      ]
    },
    "Style": {
      "section": "style",
      "keys": [
        "bg_color",
        "shadow_width",
        "bg_opa",
        "radius",
        "pad_bottom",
        "shadow_color",
        "border_color",
        "pad_left",
        "text_color",
        "border_width",
        "pad_right",
        "pad_top"
      ]
    },
    "Events": {
      "section": "events",
      "keys": [
        "on_click"
      ]
    }
  }
}